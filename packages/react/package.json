{
  "name": "@socialui/react",
  "version": "1.1.1",
  "description": "A modern React UI component library for social media display",
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "tailwindcss",
    "semantic-colors"
  ],
  "author": "LEAPERone",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leaperone/socialui.git"
  },
  "homepage": "https://github.com/leaperone/socialui#readme",
  "bugs": {
    "url": "https://github.com/leaperone/socialui/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles/globals.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external react-dom",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --external react-dom --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:style": "stylelint \"src/**/*.{css,scss,less}\"",
    "lint:style:fix": "stylelint \"src/**/*.{css,scss,less}\" --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "generate:component": "turbo gen react-component",
    "generate:stories": "node scripts/generate-stories.js",
    "watch:stories": "node scripts/watch-stories.js",
    "check-types": "tsc --noEmit",
    "storybook": "storybook dev -p 6006 --ci",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-a11y": "^9.0.9",
    "@storybook/addon-docs": "^9.0.9",
    "@storybook/addon-onboarding": "^9.0.9",
    "@storybook/addon-vitest": "^9.0.9",
    "@storybook/react-vite": "^9.0.9",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@vitest/browser": "^3.2.3",
    "@vitest/coverage-v8": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.43",
    "eslint": "^9.28.0",
    "eslint-plugin-storybook": "^9.0.9",
    "playwright": "^1.53.0",
    "postcss": "^8.5.5",
    "storybook": "^9.0.9",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.0.0",
    "typescript": "5.8.2",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@iconify/react": "^6.0.0",
    "@types/qrcode": "^1.5.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.515.0",
    "qrcode": "^1.5.4"
  }
}
